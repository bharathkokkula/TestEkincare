<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_10"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/whitemsg_bg"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="16sp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="TextView"
            android:textColor="#B8C0BF"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMessage"
            app:layout_constraintStart_toEndOf="@+id/tvMessage"
            app:layout_constraintTop_toTopOf="@+id/tvMessage" />

        <ImageView
            android:id="@+id/ivTick"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMessageTime"
            app:layout_constraintStart_toEndOf="@+id/tvMessageTime"
            app:layout_constraintTop_toTopOf="@+id/tvMessageTime"
            app:srcCompat="@drawable/tick" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>