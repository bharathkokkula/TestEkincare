<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_10"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/whitemsg_bg"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="16sp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="TextView"
            android:textColor="#B8C0BF"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMessage"
            app:layout_constraintStart_toEndOf="@+id/tvMessage"
            app:layout_constraintTop_toTopOf="@+id/tvMessage" />

        <ImageView
            android:id="@+id/ivTick"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMessageTime"
            app:layout_constraintStart_toEndOf="@+id/tvMessageTime"
            app:layout_constraintTop_toTopOf="@+id/tvMessageTime"
            app:srcCompat="@drawable/tick" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:background="@drawable/dynamiccomplete_box"
        android:paddingBottom="@dimen/margin_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:padding="@dimen/margin_10"
            android:text="Recommended Lab Tests"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvVitaminC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:text="TextView"
            android:padding="3dp"
            android:textColor="#242424"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />


        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Notes: Labs can be ordered once the consultation is complete."
            android:textColor="#737b8e"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintStart_toStartOf="@+id/tvVitaminC"
            app:layout_constraintTop_toBottomOf="@+id/tvVitaminC" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPrescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/dynamiccomplete_box"
        android:paddingBottom="@dimen/margin_10"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tvPName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:padding="@dimen/margin_10"
            android:text="Doctor has shared a prescription"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPrescdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:text="TextView"
            android:textColor="#242424"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPName" />

        <TextView
            android:id="@+id/tvFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="TextView"
            android:textColor="#737b8e"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintStart_toStartOf="@+id/tvPrescdata"
            app:layout_constraintTop_toBottomOf="@+id/tvPrescdata" />

        <TextView
            android:id="@+id/tvDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="3 Days"
            android:textColor="#242424"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintBottom_toTopOf="@+id/tvFrequency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPrescdata" />

        <TextView
            android:id="@+id/textView277"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Order Medicine"
            android:textColor="#248EED"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toStartOf="@+id/textView278"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFrequency" />

        <TextView
            android:id="@+id/textView278"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Prescription"
            android:textColor="#248EED"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintBottom_toBottomOf="@+id/textView277"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView277"
            app:layout_constraintTop_toTopOf="@+id/textView277" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>